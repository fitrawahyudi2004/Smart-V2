let fetch = require('node-fetch')
let handler = async (m, { conn, command, text,args, usedPrefix }) => {

let teks = text ? text : m.quoted && m.quoted.text ? m.quoted.text : ''    

if (!teks) throw `
contoh :

${usedPrefix}${command} jokowi

`
let buffer = await fetch(`https://api.lolhuman.xyz/api/detik?apikey=fitra_wahyudi_`)
let json = await buffer.json()
let thumb = json.result.thumbnail
let anu = (`
─────〔 *Twitter Stalker* 〕─────

*Judul :* ${json.result.title}
*Deskripsi :* ${json.result.link}
*Waktu di Upload :* ${json.result.time}

`.trim())
conn.sendFile(m.chat, thumb, 'hasil.jpg', anu, m)
}
handler.help = ['twitterstalk <username>']
handler.command = ['detiknews']
handler.tags = ['stalk']
handler.register = true
handler.limit = true
handler.premium = false
module.exports = handler
